{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2015",
    "lib": ["esnext"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "dist", "test/**/*.ts"]
}
